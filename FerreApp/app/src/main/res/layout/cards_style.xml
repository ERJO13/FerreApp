<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_escenario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin_esce"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_albrad_esc">

        <RelativeLayout
            android:id="@+id/relativ_esc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/alb_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="TODO"
                android:focusable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/name_obj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="@dimen/alb_title_padding"
                android:paddingTop="@dimen/alb_title_padding"
                android:paddingRight="@dimen/alb_title_padding"
                android:textSize="@dimen/item_count"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="@android:integer/config_mediumAnimTime"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>